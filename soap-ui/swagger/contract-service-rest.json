{
  "swagger": "2.0",
  "info": {
    "description": "Simple Contract Calculation Application",
    "version": "1.0.0",
    "title": "Swagger Contract Calculator"
  },
  "host": "localhost",
  "basePath": "/v1",
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/conctract": {
      "post": {
        "tags": [
          "contract"
        ],
        "summary": "calculate contract",
        "description": "",
        "operationId": "calulateContract",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Contract to be calculated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Contract"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "contract sucessfully calculated"
          },
          "405": {
            "description": "invalid contract input"
          },
          "500": {
            "description": "server error"
          }
        }
      }
    }
  },
  "definitions": {
    "Contract": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "premium": {
          "type": "number",
          "format": "double"
        },
        "signed": {
          "type": "string",
          "format": "date-time"
        },
        "clients": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Client"
          }
        },
        "risk": {
          "type": "string",
          "description": "Order Status",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "active": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Client": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "$ref": "#/definitions/Name"
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Name": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      }
    }
  }
}
